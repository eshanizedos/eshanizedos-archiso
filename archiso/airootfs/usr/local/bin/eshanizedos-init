#!/usr/bin/env bash

echo "###################################"
echo ""
echo "###################################"

yes | rm -rf /etc/pacman.d/gnupg/* || echo "Cannot delete gnupg/*"
pacman-key --init || echo "Error initializing keys"
pacman-key --recv-key A17BC39ADED817C020FA2A226657A1B4D805AD06 || echo "Error receiving key"
pacman-key --lsign-key A17BC39ADED817C020FA2A226657A1B4D805AD06 || echo "Error locally signing key"
pacman-key --populate archlinux || echo "Error populating 'archlinux'"
pacman-key --populate eshanizedos || echo "Error populating 'eshanizedos'"
pacman -Syy

pacman-key --init
pacman-key --populate

echo "###################################"
echo ""
echo "###################################"
rm /usr/local/bin/eshanizedos-first
